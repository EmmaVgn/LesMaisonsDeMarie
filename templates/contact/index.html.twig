{% extends 'base.html.twig' %}

{% block title %}
	{{ 'contact.title'|trans }}
{% endblock %}

{% block body %}
	{% include "shared/_navbar.html.twig" %}

	<div class="contact-container pe-5">
		<div class="contact py-5">
			<div class="container">
				<h1 class="text-center mb-4">{{ 'contact.title'|trans }}</h1>
				<p class="lead text-center mb-4">{{ 'contact.description'|trans }}</p>

				{{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
				{{ form_errors(form) }}

				<div
					class="row">
					<!-- Formulaire Contact -->
					<div class="col-md-6">
						<div class="mb-3">
							{{ form_row(form.firstname, {'attr': {'class': 'form-control', 'placeholder': 'contact.firstname'|trans}}) }}
						</div>
						<div class="mb-3">
							{{ form_row(form.lastname, {'attr': {'class': 'form-control', 'placeholder': 'contact.lastname'|trans}}) }}
						</div>
						<div class="mb-3">
							{{ form_row(form.phone, {'attr': {'class': 'form-control', 'placeholder': 'contact.phone'|trans}}) }}
						</div>
						<div class="mb-3">
							{{ form_row(form.email, {'attr': {'class': 'form-control', 'placeholder': 'contact.email'|trans}}) }}
						</div>
						<div class="mb-3">
							{{ form_row(form.content, {'attr': {'class': 'form-control', 'placeholder': 'contact.message'|trans, 'rows': 4}}) }}
						</div>

						<button class="btn-custom-outline mt-3 mb-4" type="submit">
							<span>{{ 'contact.submit'|trans }}</span>
						</button>
					</div>

					<!-- CoordonnÃ©es -->
					<div class="col-md-6">
						<iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2837.463248357757!2d0.5842170768094005!3d44.66931697107203!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x12aae145148e5047%3A0x1f69e49e3cbc07e0!2sLes%20maisons%20de%20Marie!5e0!3m2!1sfr!2sfr!4v1716988782465!5m2!1sfr!2sfr" width="100%" height="450" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
					</div>

					<div class="col-md-12">
						<h4 class="mt-2">
							<strong>{{ 'contact.call_me'|trans }}</strong>
						</h4>
						<p>{{ 'contact.phone_label'|trans }}
							: +33 6 09 06 43 01</p>
					</div>

					{{ form_end(form) }}
				</div>
			</div>
		</div>
	</div>

	{% include "shared/_footer.html.twig" %}
{% endblock %}
