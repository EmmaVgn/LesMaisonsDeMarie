{% extends 'base.html.twig' %}

{% block title %}
	{{ 'house2.title'|trans }}
{% endblock %}

{% block body %}
	<div class="bg-custom-house">
		<div class="container-fluid">
			<section class="house">
				<img src="{{ asset('images/house/Perigourdine/vue derriere.jpg') }}" alt="{{ 'house2.alt'|trans }}" class="house-background">
				<div class="house-text">
					<h1>
						<span class="house-left">{{ 'house2.title1'|trans }}</span>
						<span class="house-right">{{ 'house2.title2'|trans }}</span>
					</h1>
				</div>
			</section>
		</div>

		<!-- Section À propos de la maison -->
		<div class="container mt-4 pe-5">
			<div class="presentation-house">
				<div class="row d-flex justify-content-between">
					<div class="col-md-6" style="text-align: justify;">
						<h4>{{ 'house2.about'|trans }}</h4>
						<hr>
						<p>{{ 'house2.description'|trans|raw }}</p>
					</div>

					<!-- Modal pour les équipements -->
					<div class=" col-md-4">
						<h4>{{ 'house2.lodging'|trans }}</h4><hr>
						<p>
							<strong>{{ 'house2.stars'|trans }}:</strong>
							★★★</p>
						<p>
							<strong>{{ 'house2.capacity'|trans }}:</strong>
							6
							{{ 'house2.people'|trans }}</p>
						<p>
							<strong>{{ 'house2.rooms'|trans }}:</strong>
							3</p>
						<p>
							<strong>{{ 'house2.beds'|trans }}:</strong>
							3
							<br><em>{{ 'house2.bed_details'|trans }}</em>
						</p>
						<p>
							<strong>{{ 'house2.bathrooms'|trans }}:</strong>
							2</p>

						<button class="btn-custom-outline" data-bs-toggle="modal" data-bs-target="#equipmentsModal">{{ 'house2.equipments'|trans }}</button>

						{% include "_partial/_modal_equipment.html.twig" %}
					</div>
				</div>
			</div>

			<!-- Section Tarifs -->
			{% include "_partial/_tarifs_house2.html.twig" %}


			<!-- Galerie photo -->
			{% include "_partial/_gallery_house2.html.twig" %}


		</div>


		<!-- Plan Map -->
		{% include "_partial/_map.html.twig" %}

		<!-- Section Contact -->
		{% include "_partial/_contact.html.twig" %}
	</div>
{% endblock %}
