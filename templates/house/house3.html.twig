					<img src="{{ asset('images/house/Castille/salon.png') }}" alt="salon" class="thumbnail" data-full="{{ asset('images/house/Castille/salon.png') }}">
					<img src="{{ asset('images/house/Castille/salon2.png') }}" alt="Salon" class="thumbnail" data-full="{{ asset('images/house/Castille/salon2.png') }}" style="grid-column: span 2;">

				</div>
